{% extends 'base.html.twig' %}

{% block title %}Mon repertoire!{% endblock %}

{% block body %}
<link href="{{ asset('css/main.css') }}" rel="stylesheet"/>

<a class="user" href="{{ path('new') }}" ><i class="fas fa-user-plus"></i></a>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">email</th>
      <th scope="col">phone</th>
      <th scope="col">tag</th>
      <th scope="col">actions</th>

    </tr>
  </thead>
  <tbody>

  {% for contact in list_contact %} 
    <tr>
        <th scope="row">{{contact.id}}</th>
        <td>{{contact.firstname}}</td>
        <td>{{contact.lastname}}</td>
        <td>{{contact.email}}</td>
        <td>{{contact.phone}}</td>
        <td>{{contact.tag}}</td>
        <td>
            <a title="view this user" class="btn btn-default btn-sm " href="{{ path('read',{id:contact.id} ) }}"> <i class="fas fa-eye"></i></a>
            <a title="delete this user" class="btn btn-default btn-sm " href="{{ path('delete',{id:contact.id} ) }}"> <i class="fas fa-trash"></i> </a>
            <a title="edit this user" class="btn btn-default btn-sm " href="{{ path('edit',{id:contact.id} ) }}"> <i class="fas fa-edit"></i></a>
        </td>


    </tr>  
  {% endfor %}

  </tbody>
</table>


{% endblock %}
